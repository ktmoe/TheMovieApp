<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:background="@drawable/backdrop_gradient">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPerson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPersonFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_medium"
        app:srcCompat="@drawable/ic_favorite_border"/>

    <TextView
        android:id="@+id/tvPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@id/tvPersonLike"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvPersonLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivPersonLike"
        android:layout_alignParentBottom="true"
        android:textAlignment="viewStart"
        android:textSize="@dimen/text_small"
        android:layout_alignTop="@id/ivPersonLike"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:textColor="@android:color/secondary_text_dark"
        android:text="YOU LIKE 3f MOVIES"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPersonLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium_2"
        app:srcCompat="@drawable/ic_thumb"/>

</RelativeLayout>